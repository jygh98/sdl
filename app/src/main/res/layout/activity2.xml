<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.SensorDataLogger.Activity1">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/recordToggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"></Chronometer>

    <ToggleButton
        android:id="@+id/recordToggle"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="148dp"
        android:textOff="Start"
        android:textOn="Stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actionButton4"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Action4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/actionButton2"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Action2"
        app:layout_constraintBottom_toTopOf="@+id/actionButton3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/actionButton3"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Action3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/actionButton1"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Action1"
        app:layout_constraintBottom_toTopOf="@+id/actionButton4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/changeScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:onClick="changeScreen"
        android:text="Change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>